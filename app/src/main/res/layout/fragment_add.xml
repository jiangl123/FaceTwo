<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tv_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@color/frag_title_bg"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/iv_fragment_face"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />
        <EditText
            android:id="@+id/et_frag_userId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="UserId"
            android:background="@drawable/et_bg"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gray"
            android:textColor="#626161"
            />
        <EditText
            android:id="@+id/et_frag_userInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="UserInfo"
            android:background="@drawable/et_bg"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gray"
            android:textColor="#626161"
            />
        <Button
            android:id="@+id/btn_fragment_addface"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="录入"
            android:background="@drawable/btn_bg"
            />
    </LinearLayout>

</RelativeLayout>